<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="AppTheme.Base.Custom" parent="AppTheme.Base">
        <item name="colorAccent">@color/blue_A200</item>
        <item name="colorControlNormal">@color/grey_900</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base.Custom">
    </style>

    <style name="MyTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/blue_A200</item>
        <item name="colorControlNormal">@color/grey_900</item>
        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:windowBackground">@color/red_700</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:seekBarStyle">@style/MySeekBarStyle</item>
        <!--<item name="searchViewStyle">@style/MySearchViewStyle</item>-->
    </style>

    <style name="Theme.NoActionBar" parent="MyTheme.NoActionBar">
    </style>

    <style name="MySeekBarStyle" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/sb_progress</item>
        <item name="android:indeterminateDrawable">@drawable/sb_progress</item>
        <item name="android:thumb">@drawable/sb_thumb</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
    </style>

    <style name="MyBottomViewStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_bottom</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom</item>    //退出时的动画
    </style>

    <style name="MyFadeViewStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@android:anim/fade_in</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@android:anim/fade_out</item>    //退出时的动画
    </style>

    <style name="MyLeftViewStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_in_left</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/slide_out_left</item>    //退出时的动画
    </style>

    <style name="MyGrowViewStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/shrink_fade_out_from_top</item>    //退出时的动画
    </style>
</resources>
