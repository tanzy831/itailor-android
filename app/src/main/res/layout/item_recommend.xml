<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">
    <!--android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ll_suit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_suit_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/cloth"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@+id/iv_image"
                    android:layout_alignRight="@+id/iv_image"
                    android:background="#50ffffff">

                    <ImageButton
                        android:id="@+id/ib_collect"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_favorite_border_black_24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:tag="0"/>

                    <ImageButton
                        android:id="@+id/ib_share"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_share_black_24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toLeftOf="@+id/ib_collect"
                        android:layout_toStartOf="@+id/ib_collect"
                        android:layout_centerVertical="true"/>

                    <ImageButton
                        android:id="@+id/ib_shop"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_shopping_cart_black_24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toLeftOf="@+id/ib_share"
                        android:layout_toStartOf="@+id/ib_share"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_suit_pant"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_image_pant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/cloth"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_image_pant"
                    android:layout_alignRight="@+id/iv_image_pant"
                    android:paddingBottom="16dp"
                    android:background="#50ffffff">

                    <ImageButton
                        android:id="@+id/ib_collect_pant"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_favorite_border_black_24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:tag="0"/>

                    <ImageButton
                        android:id="@+id/ib_share_pant"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_share_black_24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toLeftOf="@+id/ib_collect_pant"
                        android:layout_toStartOf="@+id/ib_collect_pant"
                        android:layout_centerVertical="true"/>

                    <ImageButton
                        android:id="@+id/ib_shop_pant"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:src="@mipmap/ic_shopping_cart_black_24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toLeftOf="@+id/ib_share_pant"
                        android:layout_toStartOf="@+id/ib_share_pant"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_itailor_seal"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/grade1"
            android:contentDescription="@string/itailor_seal"/>

        <RelativeLayout
            android:id="@+id/ll_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/translucence_white"
            android:layout_below="@+id/ll_suit">
            <TextView
                android:id="@+id/tv_suit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!--<TextView
            android:id="@+id/tv_suit_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/ll_suit"
            android:textSize="18sp" />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>