<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/item_selected_boundary">
    <com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout
        android:id="@+id/recyclerview_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@mipmap/ic_mode_edit_black_36dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="#c7c7cc"/>
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@mipmap/ic_share_black_36dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="#ff9c00"/>
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@mipmap/ic_delete_black_36dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="#ff3b30"/>
        </LinearLayout>
        <!--<FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="@drawable/item_selected_boundary">-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_image_cloth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/cloth"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
        </FrameLayout>
    </com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout>
</LinearLayout>