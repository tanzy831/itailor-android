<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_move"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_move"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_delete_black_36dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/iv_rename"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_rename"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_share_black_36dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/iv_cloth"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cloth"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_cloth_name"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
