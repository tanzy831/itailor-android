<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_my_share_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <android.support.v7.widget.GridLayout
            android:id="@+id/gl_my_share_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/tv_share_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tv_favour_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/iv_favour_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_favour_count"
                android:src="@mipmap/ic_thumb_up_black_24dp"/>
            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_favour_icon"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/iv_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_comment_count"
                android:src="@mipmap/ic_comment_black_24dp"/>
            <!--<TextView
                android:id="@+id/tv_see_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_comment_icon"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/iv_see_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_see_count" />-->
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>