<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:contentDescription="@string/cloth"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/iv_image"
        android:background="#50ffffff">

        <ImageButton
            android:id="@+id/ib_collect"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_favorite_border_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tag="0" />

        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_share_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@+id/ib_collect"
            android:layout_toStartOf="@+id/ib_collect"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/ib_buy"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_shopping_cart_black_24dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@+id/ib_share"
            android:layout_toStartOf="@+id/ib_share"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>